<%- include ('./layouts/header') -%>
    <%- include ('./layouts/navbar') -%>

        <% if (success !='' ) { %>
            <div class="container mt-4">
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <strong>Exito:</strong>
                    <%= success %>
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                </div>
            </div>
            <% } %>
                <% if (user) { %>
                    <div class="container my-5 py-3 bg-secondary text-white text-center">
                        <h4>
                            <strong>Bienvenida/o</strong>
                            <%= user.username %>
                        </h4>

                        <a href="/user/logout">
                            <button class="btn-sm btn-warning" type="submit">Logout</button>
                        </a>
                    </div>
                    <% } %>
                        <!-- Inicio Chat -->
                        <div class="container bg-secondary text-white p-2" id="divChat">
                            <h1 style="text-align: center">TUS MENSAJES</h1>
                            <div style="text-align:center">

                            </div>
                            <div class="container" style="display:flex; justify-content:space-between">
                                <div>
                                    <div class="col-12">
                                        <div id="ventana">
                                           

                                        </div>
                                    </div>
                                    <div class="col-6">

                                        <a href="/chat">
                                            <button class="btn btn-primary">Volver</button>
                                        </a>


                                    </div>


                                </div>
                            </div>
                        </div>


                        <!-- Fin Chat -->
                        <script src="/js/chat.js"></script>

                        <%- include ('./layouts/footer') -%>